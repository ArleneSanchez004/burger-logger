<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Welcome to Burger Logger!</h1>
        </div>
    </div>
    <div class="row">
        {{#each burger_data}}
            {{#unless this.devoured}}
            <div class="col-sm-6">
                <span> {{id}}.{{burger_name}} </span>
            </div>
            <div class="col-sm-6">
                <form>
                    <input type="text" value={{id}}>
                    <button type="submit" class="btn btn-default">Devour the burger!</button>
                </form>
            </div>
            {{/unless}}
        {{/each}}
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <form action="/burgers/insert" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-secondary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter the burgers you want to log!</p>
        </div>
    </div>
</div>